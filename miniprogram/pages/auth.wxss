.container {
		background-color: #3bb4f2;
		width: 100%;
		height: 100vh;
		box-sizing: border-box;
		padding-top: 300rpx;
	}

	.auth-box {
		position: relative;
		background-color: #FFFFFF;
		width: 90%;
    padding-bottom: 40rpx;
		border-radius: 20rpx;
		margin-left: auto;
		margin-right: auto;
		padding-top: 70rpx;
		/* margin-top: 300rpx; */
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
	}

	.auth-image {
		position: absolute;
		height: 140rpx;
		width: 140rpx;
		border-radius: 50%;
		top: -70rpx;
		left: 50%;
		margin-left: -70rpx;

	}

	.title {
		text-align: center;
		font-size: 36rpx;
		padding: 20rpx;
		box-sizing: border-box;
		border-bottom: 1rpx solid #eee;
	}

	.introduce {
		text-align: center;
		font-size: 34rpx;
		padding: 20rpx;
	}

	.desc {
		text-align: center;
		font-size: 32rpx;
		color: #888888;
		padding: 20rpx;
	}

	.login-botton {
		border: 0;
		background-color: #3BB4F2;
		color: #FFFFFF;
		height: 80rpx;
		line-height: 80rpx;
		font-size: 36rpx;
		margin-top: 20rpx;
		width: 80%;
		border-radius: 40rpx;
	}