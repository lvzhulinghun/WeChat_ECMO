@import '../../pages/startstage/startView.wxss';

.aui-flex {
  padding: .5rem 0;
  display: -webkit-box;

  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 15px;
  position: relative;
}

.aui-flex-box {
  background: #f1f0f0;
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
  font-size: 14px;
  color: #333;
  margin-left: -1em;
}
.icon-phone {
  position: absolute;
  left: 10px;
  top: 1.8rem;
}

.icon {
  width: 20px;
  height: 20px;
  display: block;
  border: 0;
  float: left;
  background-size: 20px;
  background-repeat: no-repeat;
}
.aui-ver-form .aui-flex-box input {
  height: 4.2rem;
  line-height: 2.2rem;
  padding: .4rem 2rem;
  background: 0;
  border: 0;
  width: 100%;
}
.icon-code {
  position: absolute;
  left: 10px;
  top: 1.8rem;
  background-size: 18px;
}
.aui-ver-button {
  margin-top: 1.2rem;
}